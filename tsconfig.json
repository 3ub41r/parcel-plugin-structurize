{
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "lib",
        "declaration": true,
        "declarationDir": "lib/types",
        "baseUrl": "./src",
        "module": "ESNext",
        "target": "es5",
        "lib": ["es6", "dom", "es2016", "es2017"],
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "incremental": true,
        "moduleResolution": "node"
    }
}
